ssl_certificate $NGINX_CERT;
ssl_certificate_key $NGINX_CERT_KEY;
ssl_dhparam $NGINX_DH_PARAMS;
ssl_trusted_certificate $NGINX_TRUSTED_CERTS; # root CA and intermediate certs

ssl_session_timeout 1d;
ssl_session_cache shared:SSL:10m;  # about 40000 sessions
								   # TODO: increase this when it would be needed (TWEAK)

ssl_session_tickets off; # session tickets break forward secrecy

ssl_protocols TLSv1.2 TLSv1.3;
ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
ssl_prefer_server_ciphers off;

ssl_stapling on;
ssl_stapling_verify on;

ssl_handshake_timeout 10s;

